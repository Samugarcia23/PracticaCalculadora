<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sam.practica_calculadora.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="88dp"
        android:layout_height="79dp"
        android:layout_marginEnd="224dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/equal"
        android:onClick="calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHex" />

    <LinearLayout
        android:id="@+id/linearLayoutTop"
        android:layout_width="347dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="numero"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value7"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <Button
            android:id="@+id/button8"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="numero"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value8"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="numero"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value9"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <ImageButton
            android:id="@+id/buttonDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="TODO"
            android:onClick="imagen"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="/"
            app:srcCompat="@drawable/divide" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2ndTop"
        android:layout_width="347dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTop">

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="numero"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value4"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="numero"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value5"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="numero"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value6"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <ImageButton
            android:id="@+id/buttonMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="imagen"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            app:srcCompat="@drawable/multiply" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2ndBottom"
        android:layout_width="347dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2ndTop">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="numero"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value1"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="numero"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value2"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="numero"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value3"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <ImageButton
            android:id="@+id/buttonSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="imagen"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            app:srcCompat="@drawable/subtract" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBottom"
        android:layout_width="347dp"
        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2ndBottom"
        tools:layout_editor_absoluteY="299dp">

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="delete"
            android:text="@string/action_clear"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="numero"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/value0"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <Button
            android:onClick="numero"
            android:id="@+id/buttondot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="."
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <ImageButton
            android:id="@+id/buttonAddition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="imagen"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            app:srcCompat="@drawable/add" />
    </LinearLayout>

    <TextView
        android:maxLength="15"
        android:id="@+id/resultsTextView"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/background_dark"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0" />

    <Button
        android:onClick="hex"
        android:id="@+id/buttonHex"
        android:layout_width="87dp"
        android:layout_height="36dp"
        android:layout_marginEnd="228dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        android:text="HEX"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBin"
        tools:layout_editor_absoluteY="177dp" />

    <Button
        android:id="@+id/buttonBin"
        style="@android:style/Widget.Button"
        android:layout_width="87dp"
        android:layout_height="36dp"
        android:layout_marginEnd="228dp"
        android:layout_marginTop="28dp"
        android:background="@color/colorAccent"
        android:onClick="binario"
        android:text="BIN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsTextView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="A"
        android:enabled="false"
        app:layout_constraintEnd_toStartOf="@+id/buttonb"
        app:layout_constraintStart_toEndOf="@+id/buttonBin"
        app:layout_constraintTop_toBottomOf="@+id/resultsTextView" />

    <Button
        android:id="@+id/buttonb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="B"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsTextView" />

    <Button
        android:id="@+id/buttonc"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:text="C"
        app:layout_constraintEnd_toStartOf="@+id/buttond"
        app:layout_constraintHorizontal_bias="0.461"
        android:enabled="false"
        app:layout_constraintStart_toEndOf="@+id/buttonBin"
        app:layout_constraintTop_toBottomOf="@+id/buttona" />

    <Button
        android:id="@+id/buttond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="D"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonb" />

    <Button
        android:id="@+id/buttone"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="E"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonf"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/buttonBin"
        app:layout_constraintTop_toBottomOf="@+id/buttonc"
        app:layout_constraintVertical_bias="0.01" />

    <Button
        android:id="@+id/buttonf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:text="F"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttond"
        app:layout_constraintVertical_bias="0.01" />

    <Button
        android:id="@+id/buttonnormal"
        android:onClick="normal"
        android:layout_width="87dp"
        android:layout_height="36dp"
        android:layout_marginEnd="228dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        android:text="DE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHex" />

    <Button
        android:id="@+id/buttonmmas"
        android:layout_width="65dp"
        android:layout_height="84dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_red_light"
        android:text="M+"
        android:onClick="mmas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonmmenos"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/buttone" />

    <Button
        android:onClick="mmenos"
        android:id="@+id/buttonmmenos"
        android:layout_width="65dp"
        android:layout_height="84dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_red_light"
        android:text="M-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonmc"
        app:layout_constraintStart_toEndOf="@+id/buttonmmas"
        app:layout_constraintTop_toBottomOf="@+id/buttone" />

    <Button
        android:id="@+id/buttonmc"
        android:layout_width="65dp"
        android:layout_height="84dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_red_light"
        android:text="MC"
        android:onClick="mclear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonmmenos"
        app:layout_constraintTop_toBottomOf="@+id/buttone" />

</android.support.constraint.ConstraintLayout>
